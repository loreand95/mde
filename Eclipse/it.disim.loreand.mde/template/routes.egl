<html>
	<head>
		<meta charset="UTF-8">
		<meta name="author" content="[%=cp.manager%]">
		<title> [%=cp.name%] </title>
		
		<style>
			td { width:100px }
			table, th, td {
  				border: 1px solid black;
			}
		</style>
	</head>
	<body>
		<a href="index.html"><h1>[%=cp.name%]</h1></a>
		<hr>
		<h2>Routes</h2>
		<table>
			<tr>
				<th>Id</th>
				<th>Start Address</th>
				<th>End Address</th>
				<th>Seats</th>
				<th>Date</th>
				<th>Customer</th>
				<th>Rider</th>
			</tr>
			[%for (route in cp.routes) { %]
			<tr>
				<td>
					[%=route.id%]
				</td>
				<td>
					[%=route.startAddress%]
				</td>
				<td>
					[%=route.endAddress%]
				</td>
				<td>
					[%=route.seats%]
				</td>
				<td>
					[%=route.date.getDay()%]/[%=route.date.getMonth()%]/[%=route.date.getYear()+1900%]
				</td>
				<td>
					<a id="[%=route.customer.id%]" href="customers.html">[%=route.customer.name%] [%=route.customer.surname%]</a>
				</td>
				<td>
					<a id="[%=route.rider.id%]" href="riders.html">[%=route.rider.name%] [%=route.rider.surname%]</a>
				</td>
			</tr>
			[%}%]
		</table>
	</body>
</html>